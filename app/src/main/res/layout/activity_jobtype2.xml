<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jobtype2">

    <ImageView
        android:id="@+id/book"
        android:layout_width="155dp"
        android:layout_height="156dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="366dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:text="What are some skills that you enjoy using or find particularly fulfilling?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book" />

    <Button
        android:id="@+id/myButton2"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:background="@drawable/purplerectangular"
        android:gravity="center"
        android:text="Coaching or mentoring"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myButton4"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/myButton4"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:background="@drawable/purplerectangular"
        android:gravity="center"
        android:text="Networking"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myButton3"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/myButton5"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:background="@drawable/purplerectangular"
        android:gravity="center"
        android:text="Research"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myButton2"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/myButton3"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:background="@drawable/purplerectangular"
        android:gravity="center"
        android:text="Writing"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>