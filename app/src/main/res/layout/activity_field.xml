<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".field">



    <ImageView
        android:id="@+id/field"
        android:layout_width="350dp"
        android:layout_height="600dp"


        android:background="@drawable/fieldupdate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/my_checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="300dp"
        app:layout_constraintLeft_toLeftOf="@id/field"
        app:layout_constraintTop_toTopOf="@+id/field"
        />


    <CheckBox
        android:id="@+id/my_checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="300dp"
        app:layout_constraintLeft_toLeftOf="@id/field"
        app:layout_constraintTop_toTopOf="@+id/my_checkbox1"
         />

    <CheckBox
        android:id="@+id/my_checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="300dp"
        app:layout_constraintLeft_toLeftOf="@id/field"
        app:layout_constraintTop_toTopOf="@+id/my_checkbox2"
        />

    <CheckBox
        android:id="@+id/my_checkbox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="300dp"
        app:layout_constraintLeft_toLeftOf="@id/field"
        app:layout_constraintTop_toTopOf="@+id/my_checkbox3"
        />

    <CheckBox
        android:id="@+id/my_checkbox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="300dp"
        app:layout_constraintLeft_toLeftOf="@id/field"
        app:layout_constraintTop_toTopOf="@+id/my_checkbox4"
         />

    <CheckBox
        android:id="@+id/my_checkbox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="300dp"
        app:layout_constraintLeft_toLeftOf="@id/field"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/field"
        app:layout_constraintTop_toTopOf="@+id/my_checkbox5"
        />



    <EditText
        android:id="@+id/others"
        android:layout_width="220dp"
        android:layout_height="60dp"

        android:ems="12"
        android:hint="Type Here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/field"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="100dp"

        />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="219dp"
            android:layout_height="47dp"
            android:layout_marginStart="114dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/purplerectangular"
            android:text="Save"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>