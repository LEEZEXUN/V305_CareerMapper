<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jobpreference">


    <TextView
        android:id="@+id/firstline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Preferences"
        android:layout_marginTop="45dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/secondline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Job Roles"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/firstline"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/seeall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See all"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/lightgrey"
        app:layout_constraintTop_toBottomOf="@id/firstline"
        app:layout_constraintLeft_toRightOf="@id/secondline"/>


    <RadioButton
        android:id="@+id/button1"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:elevation="2dp"
        android:gravity="center"
        android:paddingHorizontal="40dp"
        android:text="Product Designer"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondline" />


    <RadioButton
        android:id="@+id/button2"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:text="Motion Designer"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintLeft_toRightOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/secondline" />

    <RadioButton
        android:id="@+id/button3"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:text="UX Designer"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintLeft_toLeftOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button1" />

    <RadioButton
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingHorizontal="58dp"
        android:text="Graphics Designer"
        android:textSize="13dp"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintLeft_toRightOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/button2" />

    <TextView
        android:id="@+id/selectstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select State"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintLeft_toLeftOf="@id/secondline"/>

    <RadioButton
        android:id="@+id/penang"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:paddingHorizontal="35dp"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Penang"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintTop_toBottomOf="@id/selectstate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        />

    <RadioButton
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingHorizontal="35dp"
        android:text="Pahang"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintLeft_toRightOf="@id/penang"
        app:layout_constraintTop_toBottomOf="@id/selectstate" />

    <RadioButton
        android:id="@+id/johor"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="Johor"
        android:textSize="14dp"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintLeft_toRightOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/selectstate" />

    <TextView
        android:id="@+id/Jobtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jobtype"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="130dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintLeft_toLeftOf="@id/secondline"/>

    <RadioButton
        android:id="@+id/button5"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"

        android:elevation="4dp"
        android:gravity="center"
        android:text="Internship"
        android:textSize="14dp"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintTop_toBottomOf="@id/selectstate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="35dp"
        />

    <RadioButton
        android:id="@+id/fulltime"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:elevation="4dp"
        android:gravity="center"

        android:text="Full-time"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintLeft_toRightOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/selectstate" />

    <RadioButton
        android:layout_width="90dp"
        android:layout_height="52dp"

        android:layout_marginLeft="12dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:text="Any"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintLeft_toRightOf="@id/fulltime"
        app:layout_constraintTop_toBottomOf="@id/selectstate" />


    <TextView
        android:id="@+id/Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Mode"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/secondline"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <RadioButton
        android:id="@+id/buttonM"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"

        android:elevation="4dp"
        android:gravity="center"
        android:text="On-site"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintTop_toBottomOf="@id/selectstate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="35dp"
        />

    <RadioButton
        android:id="@+id/online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingHorizontal="35dp"
        android:text="Online"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintLeft_toRightOf="@id/buttonM"
        app:layout_constraintTop_toBottomOf="@id/selectstate" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="18dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/radio_selector"
        android:button="@drawable/null_radio_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:text="Any"
        android:textColor="@drawable/radio_text_selector"
        app:layout_constraintLeft_toRightOf="@id/online"
        app:layout_constraintTop_toBottomOf="@id/selectstate" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/purplerectangular"
        android:text="Save"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>